// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  memo          Memo[]
  works         Works[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Works {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  googleId       String   @unique
  title          String
  authors        String[]
  publisher      String?
  publishedDate  String?
  description    String?
  pageCount      Int?
  smallThumbnail String?
  thumbnail      String?

  memo Memo[]

  createdByUserId String?
  createdByUser   User?   @relation(fields: [createdByUserId], references: [id])

  @@index([googleId])
}

enum MemoVisibility {
  PRIVATE
  PUBLIC
}

model Memo {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId             String
  startedAt          DateTime?
  finishedAt         DateTime?
  characters         Character[]
  characterRelations CharacterRelation[]
  events             Event[]
  works              Works               @relation(fields: [worksId], references: [id])
  worksId            String
  worksTitle         String
  user               User                @relation(fields: [userId], references: [id])
  visibility         MemoVisibility      @default(PUBLIC)

  @@index([userId])
}

model Character {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId String
  memoId String

  name   String
  remark String?

  sourceCharacterRelations CharacterRelation[] @relation(name: "sourceCharacterRelations")
  targetCharacterRelations CharacterRelation[] @relation(name: "targetCharacterRelations")

  memo Memo @relation(fields: [memoId], references: [id])

  @@index([userId])
  @@index([memoId])
}

model CharacterRelation {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId String
  memoId String

  sourceCharacterId Int
  targetCharacterId Int

  name   String?
  remark String?

  sourceCharacter Character @relation(fields: [sourceCharacterId], references: [id], name: "sourceCharacterRelations")
  targetCharacter Character @relation(fields: [targetCharacterId], references: [id], name: "targetCharacterRelations")
  memo            Memo      @relation(fields: [memoId], references: [id])

  @@index([userId])
  @@index([memoId])
}

model Event {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId String
  memoId String

  progressPercentage Int?
  page               Int?
  name               String
  remark             String?
  date               DateTime?

  memo Memo @relation(fields: [memoId], references: [id])

  @@index([userId])
  @@index([memoId])
}
